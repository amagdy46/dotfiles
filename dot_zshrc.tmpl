# Interactive shell configurations
# (Environment variables are now in ~/.zshenv)

# direnv hook for directory-specific environments
eval "$(direnv hook zsh)"

# mise - polyglot version manager (replaces nvm, pyenv, rbenv, etc.)
eval "$(mise activate zsh)"

# --------------------
# Dotfiles management (chezmoi)
# --------------------

alias dot='chezmoi'
alias dot-edit='chezmoi edit'
alias dot-apply='chezmoi apply'
alias dot-diff='chezmoi diff'
alias dot-status='chezmoi status'
alias dot-update='chezmoi update'
alias dot-cd='cd $(chezmoi source-path)'

# Quick commit and push dotfiles changes
dot-commit() {
    cd $(chezmoi source-path)
    git add -A
    git commit -m "$1"
    git push
    cd -
    echo "Committed and pushed: $1"
}
